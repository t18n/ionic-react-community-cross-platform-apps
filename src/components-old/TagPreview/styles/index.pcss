.tag-preview-card {
  display: block;
  margin: auto;
  max-width: 170px;
  padding: 5px;
}

.tag-preview-card ion-card {
  padding: 0;
  margin: 0;
  width: 160px;
  height: 160px;
}

.tag-preview-card lazy-img {
  object-fit: cover;
  height: 100%;
}

.tag-preview-card ion-label {
  margin: 8px 0 16px;
  display: block;
  white-space: nowrap;
}

.tag-preview-card ion-label * {
  overflow: hidden;
  text-overflow: ellipsis;
}

.tag-preview-card .index {
  font-weight: 800;
}

.rating {
  background: #aaa;
  color: #fff;
  width: 12px;
  display: inline-block;
  text-align: center;
  height: 12px;
  font-weight: 300;
  font-size: 9px;
  margin-left: 5px;
  margin-top: -2px;
  vertical-align: middle;
}
