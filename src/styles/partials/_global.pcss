*,
*::after,
*::before {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

html {
  height: 100%;
  scroll-behavior: smooth;
}

body {
  padding-top: constant(safe-area-inset-top); /* for iOS 11.2 */
  padding-top: env(safe-area-inset-top); /* for iOS 11.2 */
}

.no-scroll {
  --overflow: hidden;
}
