/*
* Size - Width
*/
.w-100p {
  width: 100%;
}

.w-m {
  width: 100%;

  @media (--viewport-tablet) {
    width: calc(var(--grid) * 125);
  }

  @media (--viewport-desktop) {
    width: calc(var(--grid) * 160);
  }
}

/*
* Size - Height
*/
.h-100p {
  height: 100%;
}

.h-m {
  height: 80%;

  @media (--viewport-tablet) {
    height: calc(var(--grid) * 70);
  }

  @media (--viewport-desktop) {
    height: calc(var(--grid) * 80);
  }
}

/*
* Padding
*/

.p-0 {
  @mixin spaceTop padding, 0;
  @mixin spaceBottom padding, 0;
  @mixin spaceLeft padding, 0;
  @mixin spaceRight padding, 0;
}

.pa-m {
  @mixin spaceTop padding, calc(var(--grid) * 5);
  @mixin spaceBottom padding, calc(var(--grid) * 5);
  @mixin spaceLeft padding, calc(var(--grid) * 5);
  @mixin spaceRight padding, calc(var(--grid) * 5);
}

.pt-m {
  @mixin spaceTop padding, calc(var(--grid) * 5);
}

.pb-m {
  @mixin spaceBottom padding, calc(var(--grid) * 5);
}

.pl-m {
  @mixin spaceLeft padding, calc(var(--grid) * 5);
}

.pr-m {
  @mixin spaceRight padding, calc(var(--grid) * 5);
}

/*
* Margin
*/
.m-0 {
  @mixin spaceTop margin, 0;
  @mixin spaceBottom margin, 0;
  @mixin spaceLeft margin, 0;
  @mixin spaceRight margin, 0;
}

.mx-auto {
  @mixin spaceLeft margin, auto;
  @mixin spaceRight margin, auto;
}

.my-auto {
  @mixin spaceTop margin, auto;
  @mixin spaceBottom margin, auto;
}

.ml-auto {
  @mixin spaceLeft margin, auto;
}

.mr-auto {
  @mixin spaceRight margin, auto;
}

.ma-m {
  @mixin spaceTop margin, calc(var(--grid) * 5);
  @mixin spaceBottom margin, calc(var(--grid) * 5);
  @mixin spaceLeft margin, calc(var(--grid) * 5);
  @mixin spaceRight margin, calc(var(--grid) * 5);
}

.mt-s {
  @mixin spaceTop margin, calc(var(--grid) * 3);
}

.mt-m {
  @mixin spaceTop margin, calc(var(--grid) * 5);
}

.mt-l {
  @mixin spaceTop margin, calc(var(--grid) * 8);
}

.mb-s {
  @mixin spaceBottom margin, calc(var(--grid) * 3);
}

.mb-m {
  @mixin spaceBottom margin, calc(var(--grid) * 5);
}

.mb-l {
  @mixin spaceBottom margin, calc(var(--grid) * 8);
}

.ml-s {
  @mixin spaceLeft margin, calc(var(--grid) * 3);
}

.ml-m {
  @mixin spaceLeft margin, calc(var(--grid) * 5);
}

.ml-l {
  @mixin spaceLeft margin, calc(var(--grid) * 8);
}

.mr-s {
  @mixin spaceRight margin, calc(var(--grid) * 3);
}

.mr-m {
  @mixin spaceRight margin, calc(var(--grid) * 5);
}

.mr-l {
  @mixin spaceRight margin, calc(var(--grid) * 8);
}

/*
* Border
*/
.border-0 {
  border: none !important;
  border-width: 0 !important;

  --border: 0 !important;
  --border-width: 0 !important;
}

.border-1 {
  border-width: 1 !important;

  --border-width: 1 !important;
}

/*
* Radius
*/
.radius-all {
  border-radius: 50%;
}

.radius-s {
  border-radius: var(--grid);
}

/*
* Text
*/
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

/* Cursor */
.cursor-pointer {
  cursor: pointer;
}
