.chat-page {
  .title-custom {
    padding-left: 48px;
    text-align: left;
    font-weight: 400;
  }

  .online-status {
    margin-right: 4px;
  }

  .status {
    color: var(--ion-color-medium);
    vertical-align: middle;
  }

  .chat-header {
    padding: 8px;
    line-height: 1.4em;
  }

  .avatar-sender-lg {
    position: relative;
    margin-bottom: 8px;
  }

  .conversation-divider {
    text-align: center;
    height: 24px;
    margin-top: 20px;

    .line-horizontal {
      height: 1px;
      width: 100%;
      background-color: var(--ion-color-medium);
    }

    .label-time {
      display: inline-block;
      font-size: 12px;
      letter-spacing: 1px;
      position: relative;
      top: -12px;
      background-color: var(--ion-color-light);
      padding: 0 12px;
    }
  }
}
