.lazy-img {
  background-image: url(data:image/jpeg;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mPMzIyuBwAEHgGuXmd8SQAAAABJRU5ErkJggg==);
  background-size: cover;
  background-repeat: no-repeat;
  width: 100%;
  height: 100%;
}

.lazy-img img {
  opacity: 0;
  display: block;
  transition: opacity 250ms ease-in;
  object-fit: cover;
}

.lazy-img img.loaded {
  opacity: 1;
}
