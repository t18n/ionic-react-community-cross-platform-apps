:root {
  --sidebar-width: 80%;
  --sidebar-outter-space: calc(var(--grid) * 5);
  --sidebar-inner-space: calc(var(--grid) * 5);

  @media (--viewport-tablet) {
    --sidebar-width: calc(var(--grid) * 60);
    --sidebar-outter-space: calc(var(--grid) * 15);
    --sidebar-inner-space: calc(var(--grid) * 6);
  }

  @media (--viewport-desktop) {
    --sidebar-width: calc(var(--grid) * 90);
    --sidebar-outter-space: calc(var(--grid) * 26);
    --sidebar-inner-space: calc(var(--grid) * 8);
  }

  @media (--viewport-desktopLarge) {
    --sidebar-width: calc(var(--grid) * 120);
    --sidebar-outter-space: calc(var(--grid) * 40);
    --sidebar-inner-space: calc(var(--grid) * 10);
  }
}

/* Menu */
ion-menu {
  height: 100%;
  width: var(--sidebar-width);

  .left-sidebar__content {
    padding-top: var(--space-s);
    padding-left: var(--sidebar-outter-space);
    padding-right: var(--sidebar-inner-space);
    overflow-y: auto;
  }

  .right-sidebar__content {
    padding-top: var(--space-s);
    padding-right: var(--sidebar-outter-space);
    padding-left: var(--sidebar-inner-space);
    overflow-y: auto;
  }
}

/* Main menu */
.left-sidebar {
  &__item {
    --background-hover: transparent;

    &:hover * {
      --ion-color-base: var(--ion-color-dark) !important;
    }

    &.active * {
      --ion-color-base: var(--ion-color-primary) !important;
    }
  }

  &__logo {
    width: calc(var(--grid) * 40);
  }
}
