.post-reactions {
  padding: 8px;

  .panel-title {
    margin-bottom: 8px;
  }

  .reactions-list {
    display: flex;
    flex-direction: row;
  }

  .reactor {
    position: relative;
    margin-right: 8px;

    .reaction-badge {
      position: absolute;
      right: 0;
      bottom: 0;
      background-color: var(--ion-color-primary);
      color: var(--ion-color-light);
      border: 1px solid #fff;
      border-radius: 50%;
      width: 16px;
      height: 16px;
      text-align: center;
    }

    ion-icon {
      width: 11px;
      margin-top: -1px;
    }
  }

  .reactor-more {
    display: inline-block;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    border: 1px solid var(--ion-color-light-shade);
  }
}
